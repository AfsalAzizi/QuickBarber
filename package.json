{
  "name": "quickbarber-backend",
  "version": "1.0.0",
  "description": "Node.js API for QuickBarber WhatsApp appointment system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "echo 'No build step required'",
    "vercel-build": "echo 'Vercel build completed'",
    "docker:build": "docker build -t quickbarber-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env quickbarber-backend",
    "docker:dev": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "verify-webhook": "node scripts/verify-webhook.js",
    "test-connection": "node scripts/test-connection.js",
    "add-data": "node scripts/addMissingData.js",
    "test-waba-number": "node scripts/testWabaNumber.js"
  },
  "keywords": [
    "whatsapp",
    "barber",
    "appointments",
    "mongodb",
    "express"
  ],
  "author": "QuickBarber",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "axios": "^1.6.2",
    "crypto": "^1.0.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
