{
  "version": 2,
  "functions": {
    "Backend/api/**/*.{js,ts}": {
      "runtime": "nodejs20.x",
      "memory": 512,
      "maxDuration": 10
    }
  },
  "routes": [{ "src": "/api/(.*)", "dest": "Backend/api/$1" }],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [{ "key": "Access-Control-Allow-Origin", "value": "*" }]
    }
  ]
}
